{
  "name": "GridyFredmansky",
  "description": "Custom a grid with guides",
  "author": "Oleg Frolov",
  "authorEmail": "frolololeg@gmail.com",
  "homepage": "https://github.com/Volorf/Gridy",
  "version": 1.0,
  "identifier": "com.example.sketch.gridy",
  "compatibleVersion": 1,
  "bundleVersion": 1,
  "commands": [
    {
      "name": "Vertical guides",
      "identifier": "verticalGuides",
      "shortcut": "ctrl alt v",
      "script": "fredmansky-gridy.js",
      "handler": "createVerticalGuides"
    },
    {
      "name": "Horizontal guides",
      "identifier": "horizontalGuides",
      "shortcut": "ctrl alt h",
      "script": "fredmansky-gridy.js",
      "handler": "createHorizontalGuides"
    },
    {
      "name": "Remove all guides",
      "identifier": "allGuides",
      "shortcut": "ctrl alt r",
      "script": "fredmansky-gridy.js",
      "handler": "removeAllGuides",
    }
  ],
  "menu": {
    "items": [
      "verticalGuides",
      "horizontalGuides",
      "allGuides"
    ]
  }
}
